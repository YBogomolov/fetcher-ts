{
  "extends": [
    "tslint:recommended"
  ],
  "defaultSeverity": "error",
  "rules": {
    "no-console": [
      false
    ],
    "quotemark": [
      true,
      "single"
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "case-insensitive",
        "grouped-imports": true,
        "groups": [
          {
            "name": "relative",
            "match": "^\\.\\./",
            "order": 30
          },
          {
            "name": "local",
            "match": "(^\\./)|(^\\.$)",
            "order": 40
          },
          {
            "name": "modules",
            "match": ".*",
            "order": 20
          }
        ]
      }
    ],
    "member-ordering": [
      false
    ],
    "object-literal-sort-keys": [
      false
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "indent": [
      true,
      "spaces"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "max-line-length": [
      true,
      120
    ],
    "semicolon": [
      true,
      "always"
    ],
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "linebreak-style": [
      true,
      "LF"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ],
    "member-access": false,
    "no-any": true,
    "variable-name": false,
    "jsx-no-multiline-js": false,
    "no-implicit-dependencies": [
      true,
      "dev"
    ],
    "max-classes-per-file": false,
    "interface-over-type-literal": false,
    "newline-before-return": true
  }
}