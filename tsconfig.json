{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "allowJs": false,
    "checkJs": false,
    "outDir": "./lib",
    "rootDir": ".",
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "declaration": true,
    "types": [
      "jest"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*.ts",
    "./examples/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}